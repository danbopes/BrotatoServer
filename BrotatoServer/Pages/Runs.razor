@page "/runs/{runId}"

@using BrotatoServer.Data;
@using BrotatoServer.Hubs;
@using BrotatoServer.Models.JSON;
@using BrotatoServer.Utilities;
@inject IRunRepository RunRepository
@inject NavigationManager NavManager

<PageTitle>Current Run</PageTitle>

@if (fetched)
{
    @if (runData != null)
    {
        <RunDataView RunData="@runData" />
    }
    else
    {
        <p>No run found with that ID</p>
    }
}
else
{
    <p>Loading...</p>
}



@code {
    [Parameter]
    public string RunId { get; set; }

    private RunData? runData;
    private bool fetched;

    protected override async Task OnInitializedAsync()
    {
        if (!Guid.TryParse(RunId, out var guid))
        {
            fetched = true;
            return;
        }

        var run = await RunRepository.GetRunAsync(guid);

        runData = run?.RunData.RunData;

        fetched = true;

    }
}
